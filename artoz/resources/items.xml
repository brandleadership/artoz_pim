<items 	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
			xsi:noNamespaceSchemaLocation="items.xsd">

	<itemtypes>
		<!-- Product -->
		<itemtype generate="true"
		   code="ArtozProduct"
		   jaloclass="ch.screenconcept.artoz.product.ArtozProduct"
		   extends="Product"
		   autocreate="true"
	   />		
	
		<!-- Job -->
		<itemtype generate="true"
		   code="FileImportCronjob"
		   jaloclass="ch.screenconcept.artoz.importer.FileImportCronjob"
		   extends="Cronjob"
		   autocreate="true"
	   >
			<attributes>
				<attribute qualifier="fileDirectory" type="java.lang.String">
					<description>Directory where the import file is stored</description>
					<modifiers read="true" write="true" search="true" initial="true"/>
					<persistence type="property"/>
				</attribute>
				<attribute qualifier="fileName" type="java.lang.String">
					<description>the name of the import file</description>
					<modifiers read="true" write="true" search="true" initial="true"/>
					<persistence type="property"/>
				</attribute>
			</attributes>
		</itemtype>

		<itemtype generate="true"
		   code="NewsletterCustomerJob"
		   jaloclass="ch.screenconcept.artoz.importer.NewsletterCustomerJob"
		   extends="Job"
		   autocreate="true"
	   />

		<itemtype generate="true"
		   code="ProductImportJob"
		   jaloclass="ch.screenconcept.artoz.importer.ProductImportJob"
		   extends="Job"
		   autocreate="true"
	   />
	   	   		
	</itemtypes>
</items>
