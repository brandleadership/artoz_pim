  "-//Sun Microsystems, Inc.//DTD Facelet Taglib 1.0//EN"
  "http://java.sun.com/dtd/facelet-taglib_1_0.dtd">

<facelet-taglib>
	<namespace>http://hybris.com/cms</namespace>

	<tag>
		<tag-name>editable</tag-name>
		<component>
			<component-type>de.hybris.cms.CMSEditableComponent</component-type>
		</component>
	</tag>
  
	<tag>
		<tag-name>item</tag-name>
		<component>
			<component-type>de.hybris.cms.CMSItemComponent</component-type>
		</component>
	</tag>
  
	<tag>
		<tag-name>script</tag-name>
		<component>
			<component-type>de.hybris.cms.CMSScriptComponent</component-type>
		</component>
	</tag>

	<tag>
		<tag-name>translateLinks</tag-name>
		<component>
			<component-type>de.hybris.cms.CMSTranslateLinksComponent</component-type>
		</component>
	</tag>

	<tag>
	  <tag-name>form</tag-name>
	  <source>../../tiles/formParagraph.xhtml</source>
	</tag>

</facelet-taglib>